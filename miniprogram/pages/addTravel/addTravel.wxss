page {
  width: 100%;
  height: 100%;
  background-color: rgb(236,236,236);
}

.page {
  width: 100%;
  height: auto;
  padding-bottom:16rpx;
}

.add-one {
  width: 96%;
  height: auto;
  margin: 16rpx auto;
  border-radius: 8rpx;
  /* box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1); */
  overflow: hidden;
}

.add-list {
  transition: all .2s ease;
  width: 96%;
  margin: 0 auto 16rpx auto;
  /* border: 2rpx solid blue; */
  /* min-height: 440rpx; */
  height: auto;
  /* box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1); */
  background-color: white;
  border-radius: 8rpx;
  overflow: hidden;
}

.add-list-one {
  width: 100%;
  min-height: 440rpx;
  height: auto;
  padding-top: 8rpx;
  position: relative;
  padding-bottom: 2rpx;
}

.add-full {
  width: 28%;
  height: 200rpx;
  line-height: 200rpx;
  margin: 14rpx 2%;
  box-sizing: border-box;
  position: relative;
}

.add-full image {
  width: 100%;
  height: 100%;
}

.add-full .add-delete {
  position: absolute;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  right: 0;
  top: 0;
  /* background-color: rgba(166, 166, 166, 0.8); */
  text-align: center;
  line-height: 36rpx;
  color: rgba(225,225,225,1);
}

.add-full .add-delete image {
  width: 77%;
  height: 77%;
  margin-top: 12%;
  margin-left: 12%;
}

.add-full:first-child {
  margin-left: 4%;
}

.add-full:nth-child(3n+1) {
  margin-left: 4%;
}

.add-full:nth-child(3n + 3) {
  margin-right: 4%;
}

.add-image {
  width: 100%;
  height: auto;
  display: flex;
  flex-flow: row wrap;
  justify-content: flex-start;
  align-items: center;
  /* align-content: flex-start; */
}

.add-list-update {
  background-color: rgb(245, 245, 245);
  transition: all .2s ease;
}

.add-list-update image {
  transition: all .2s ease;
  width: 40%;
  height: 40%;
  margin-top: 30%;
  margin-left: 30%;
}

.add-list-update::after {
  border: none;
}


.add-footer {
  width: 98%;
  margin: 2rpx auto;
  min-height: 130rpx;
  height: auto;
  /* border-bottom: 2rpx solid rgb(221,221,221); */
}

.add-footer>view {
  width: 100%;
  height: 60rpx;
  padding: 0 3%;
  position: relative;
  box-sizing: border-box;
}

.add-time {
  float: left;
}

.add-footer>view .add-time {
  display: inline-block;
  float: left;
  height: 100%;
  line-height: 60rpx;
  margin-left: 12rpx;
  font-size: 28rpx;
  color: rgb(180,180,180);
}

.add-footer>view .add-switch {
  position: absolute;
  right: 3%;
  width: 240rpx;
  top: 0;
  bottom: 0;
  float: inherit;
  font-size: 28rpx;
  line-height: 60rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  color: rgb(221,221,221);
}

.add-footer>view .add-switch .add-ss{
  /* margin-bottom: -8rpx; */
  flex: right;
  position: absolute;
  right: 0;
  top: 6rpx;
  font-size: 38rpx;
  color: #f9bd10;
}

.add-footer textarea {
  width: 94%;
  height: 230rpx;
  /* min-height: 100rpx; */
  box-sizing: border-box;
  padding: 6rpx;
  margin: 6rpx 3%;
  font-size: 30rpx;
  color: rgb(50,50,50);
  letter-spacing: 2rpx;
  word-spacing: 2rpx;
  position: relative;
  box-shadow: 0px 0px 5px 1px rgba(0, 0, 0, 0.1);
  /* background-color: rgb(245, 245, 245); */
}

.add-footer textarea view {
  position: absolute;
  bottom: 0rpx;
  right: 4rpx;
  font-size: 22rpx;
  color: rgb(221,221,221);
}

.add-add {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 50rpx;
}

.add-add button {
  width: 100%;
  height: 100%;
  background-color: #f9bd10;
  font-size: 34rpx;
  line-height: 50rpx;
  border-radius: 0;
  color: white;
}

.add-add button::after {
  border: none;
}

.update {
  background-color: #f9bd10;
  color: white;
  box-shadow: 0 2px 5px 1px rgba(0, 0, 0, 0.1);
}

.update::after {
  border: none;
}

